<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pack.tsoglani.bird.myapplication">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@android:style/Theme.DeviceDefault">
        <activity
            android:name="GameActivity"
            android:label="@string/app_name"
            android:noHistory="true"

            >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wearable.Modal"
            android:noHistory="true"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpgradeActivity"
            android:label="Game Upgrades "
            android:theme="@style/Theme.Wearable.Modal"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".UpgradeSelectedItemMenu"
            android:label="Game Upgrades "
            android:theme="@style/Theme.Wearable.Modal"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".MissionActivity"
            android:label="Game Missions "
            android:theme="@style/Theme.Wearable.Modal"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="Game Information"
            android:theme="@style/Theme.Wearable.Modal"
            android:noHistory="true" >
        </activity>
    </application>

</manifest>