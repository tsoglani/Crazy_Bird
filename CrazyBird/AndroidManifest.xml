<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Bird.Crazy.Crazybird"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.Bird.Crazy.Crazybird.GameActivity"
            android:label="@string/app_name"
            android:noHistory="true"
   
             >
        </activity>
        <activity
            android:name="com.Bird.Crazy.Crazybird.MenuActivity"
            android:label="@string/app_name"
            android:noHistory="true" 
               >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.Bird.Crazy.Crazybird.UpgradeActivity"
            android:label="Game Upgrades "
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.Bird.Crazy.Crazybird.UpgradeSelectedItemMenu"
            android:label="Game Upgrades "
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.Bird.Crazy.Crazybird.MissionActivity"
              android:label="Game Missions "
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.Bird.Crazy.Crazybird.InfoActivity"
            android:label="Game Information"
            android:noHistory="true" >
        </activity>
       
    </application>

</manifest>